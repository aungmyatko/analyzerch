<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>JSONBootstrapServlet</servlet-name>
        <servlet-class>controller.JSONBootstrapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSONBootstrapServlet</servlet-name>
        <url-pattern>/jsonBootstrap</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NetworkBuilderServlet</servlet-name>
        <servlet-class>controller.NetworkBuilderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NetworkBuilderServlet</servlet-name>
        <url-pattern>/network</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DataRetrievalService</servlet-name>
        <servlet-class>controller.DataRetrievalService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataRetrievalService</servlet-name>
        <url-pattern>/getDataService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StartVisualizationServlet</servlet-name>
        <servlet-class>controller.StartVisualizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartVisualizationServlet</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResearchTrendsService</servlet-name>
        <servlet-class>controller.ResearchTrendsService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResearchTrendsService</servlet-name>
        <url-pattern>/getProfessorTrend</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>landingPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
